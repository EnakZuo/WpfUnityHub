<Application x:Class="UnityHub.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewModels="clr-namespace:UnityHub.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!-- 全局 ViewModel 实例，避免每次导航重复创建 -->
            <viewModels:ProjectsViewModel x:Key="ProjectsVm" />
            <viewModels:EnginesViewModel x:Key="EnginesVm" />
            <viewModels:SettingsViewModel x:Key="SettingsVm" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

