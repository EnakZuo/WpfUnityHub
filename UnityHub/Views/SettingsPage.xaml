<Page x:Class="UnityHub.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      Title="设置页面">

    <Grid Width="1080">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 设置页面标题 -->
        <TextBlock Grid.Row="0" 
                   Text="设置" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                   Margin="20,20,20,20"/>

        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="20,0,20,20">
            <StackPanel>
                <!-- 项目路径设置 -->
                <ui:Card Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="项目路径设置" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     x:Name="ProjectsPathTextBox"
                                     Margin="0,0,10,0"
                                     Text="{Binding ProjectsPath}"/>
                            
                            <ui:Button Grid.Column="1" 
                                       Content="浏览" 
                                       Appearance="Secondary"
                                       Command="{Binding BrowseProjectsPathCommand}"/>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- 引擎路径设置 -->
                <ui:Card Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="引擎路径设置" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     x:Name="EnginesPathTextBox"
                                     Margin="0,0,10,0"
                                     Text="{Binding EnginesPath}"/>
                            
                            <ui:Button Grid.Column="1" 
                                       Content="浏览" 
                                       Appearance="Secondary"
                                       Command="{Binding BrowseEnginesPathCommand}"/>
                        </Grid>
                    </StackPanel>
                </ui:Card>

                <!-- 主题设置 -->
                <ui:Card Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="主题设置" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        
                        <ComboBox x:Name="ThemeComboBox"
                                  SelectedValuePath="Tag"
                                  SelectedValue="{Binding Theme}">
                            <ComboBoxItem Content="浅色主题" Tag="Light"/>
                            <ComboBoxItem Content="深色主题" Tag="Dark"/>
                            <ComboBoxItem Content="跟随系统" Tag="System"/>
                        </ComboBox>
                    </StackPanel>
                </ui:Card>

                <!-- 保存按钮 -->
                <ui:Button Content="保存设置" 
                           Appearance="Primary"
                           HorizontalAlignment="Right"
                           Command="{Binding SaveSettingsCommand}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

